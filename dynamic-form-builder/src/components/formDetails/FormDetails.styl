@import '../../styles.styl'


flexSelectors = '.form-details-container, .flex-content, .form-details-header, .form-fields-header, .empty-list-container'

{flexSelectors}
    display flex

.form-details-container
    .form-details-wrapper 
        width 100%
        padding 0 15px
        text-align left 
        .form-details-header
            justify-content space-between
        .empty-list-container 
            height 200px
            font-size 18px
            align-items center
            justify-content center

.flex-content 
    justify-content flex-start

.form-details-content 
    .label 
        font-weight 600
        margin-right 5px
    
    & > div 
        margin-bottom 10px

    .form-fields-header
        justify-content space-between
    